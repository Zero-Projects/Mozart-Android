<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A91DA"
    android:gravity="center_vertical|center_horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/imgZero" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicia Sesión"
                android:id="@+id/txtIniciaSesion"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/iconEmail"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#3A91DA"
                    android:padding="5dp"
                    android:text="@string/icon_envelope"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="#F0F0F0" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEmail"
                    android:hint="Email"
                    android:background="#F0F0F0"
                    android:singleLine="true"
                    android:textColorHint="#8D8D8D"
                    android:padding="5dp"
                    android:textColor="#3A91DA"
                    android:textSize="16sp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="9" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/iconPassword"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#3A91DA"
                    android:padding="5dp"
                    android:text="@string/icon_lock"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="#F0F0F0" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPassword"
                    android:padding="5dp"
                    android:layout_weight="9"
                    android:singleLine="true"
                    android:textColorHint="#8D8D8D"
                    android:background="#F0F0F0"
                    android:layout_marginTop="10dp"
                    android:hint="Contraseña"
                    android:textColor="#3A91DA"
                    android:textSize="16sp"
                    android:inputType="textPassword" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconEntrar"
                android:textColor="#F0F0F0"
                android:padding="7dp"
                android:textSize="20sp"
                android:text="@string/icon_sign_in"
                android:layout_gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O con una cuenta ya vinculada"
                android:id="@+id/txtCuentaVinculada"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#f0f0f0"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/iconFacebook"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/icon_facebook"
                android:textSize="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="#f0f0f0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/iconTwitter"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/icon_twitter"
                android:textSize="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="#f0f0f0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/iconGooglePlus"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/icon_google_plus"
                android:textSize="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="#f0f0f0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|right"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrate"
                android:id="@+id/txtRegistrate"
                android:textSize="14sp"
                android:textColor="#F0F0F0"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconRegistrate"
                android:text="@string/icon_pencil"
                android:textColor="#f0f0f0"
                android:textSize="16sp"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|right"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Problemas para inicar?"
                android:id="@+id/txtProblemas"
                android:textColor="#f0f0f0"
                android:textSize="14sp"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconProblemas"
                android:text="@string/icon_question"
                android:textSize="16sp"
                android:textColor="#f0f0f0"
                android:paddingLeft="10dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>